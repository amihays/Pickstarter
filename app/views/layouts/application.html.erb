<!DOCTYPE html>
<html>
<head>
  <title>Pickstarter</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if current_user %>
  <script>
    window.CURRENT_USER = JSON.parse('<%= current_user.to_json(except: [:password_digest, :session_token]).html_safe %>');
  </script>
<% else %>
  <nav class="navbar navbar-default">
  <div class="container-fluid">

    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed"
              data-toggle="collapse"
              data-target="#collapse-menu"
              aria-expanded="false">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>

    <div class="collapse navbar-collapse" id="collapse-menu">
      <ul class="nav navbar-nav pull-left">
        <a class="navbar-brand" href="#">
          <button class="logo"><img class="brand" src="<%= image_path('PICKSTARTER-logo.png') %>"></button>
        </a>
      </ul>
      <ul class="nav navbar-nav pull-right">
        <li><a href="<%= new_session_url %>">Log in</a></li>
        <li><a href="<%= new_user_url %>">Sign up</a></li>
      </ul>
    </div>

  </div>
  </nav>
  <h4 class="error-messages"><%= render "layouts/errors" %></h4>
<% end %>

<%= yield %>

</body>
</html>
